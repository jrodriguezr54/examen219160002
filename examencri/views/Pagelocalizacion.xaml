<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="examencri.views.Pagelocalizacion">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,0">
            <Label Text="Latitud"  />
            <Entry Placeholder="latitud" x:Name="latitud" Keyboard="Numeric" IsEnabled="False"/>

            <Label Text="Longitud"  />
            <Entry Placeholder="longitud" x:Name="longitud" Keyboard="Numeric" IsEnabled="False"/>

            <Label Text="Descripcion Larga"  />
            <Entry Placeholder="Descripcion Larga" x:Name="descripcionlarga" Keyboard="Text" />

            <Label Text="Descripcion Corta"  />
            <Entry Placeholder="Descripcion corta" x:Name="descripcioncorta" Keyboard="Text" />

            <Button Text="Salvar ubicacion" x:Name="btnguardar" Clicked="btnguardar_Clicked"/>

            <Button Text="Ubicaciones Salvadas" x:Name="btnsalvar" Clicked="btnsalvar_Clicked"/>
            


        </StackLayout>
    </ContentPage.Content>
</ContentPage>